<Page
    x:Class="News_Stand.fact"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:News_Stand"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Page.BottomAppBar>
        <AppBar>
            <StackPanel Margin="0,0,0,-4" Height="30" VerticalAlignment="Bottom">
                <Button x:ConnectionId='1'  Style="{StaticResource PreviousAppBarButtonStyle}"               Height="60" Margin="0,-10,0,0" />
                <Button x:ConnectionId='2'  Style="{StaticResource HomeAppBarButtonStyle}"               Margin="75,-60,0,15" Height="55"/>

                <Button x:ConnectionId='3'  Style="{StaticResource NextAppBarButtonStyle}"               Margin="145,-75,0,15" Height="54"/>
                <Button x:ConnectionId='4'  Style="{StaticResource OutAppBarButtonStyle}"               Margin="215,-80,0,15" Height="47" />
            </StackPanel>
        </AppBar>
    </Page.BottomAppBar>


    <Grid Background="{StaticResource ApplicationPageBackgroundThemeBrush}">
        
        <Image Source="Assets/backg (1).png" Stretch="UniformToFill" />
        <GridView x:ConnectionId='5' HorizontalAlignment="Left" VerticalAlignment="Top" Width="1366" Height="768"                           >
            <WebView x:ConnectionId='6' x:Name="web" Height="733" Width="1366"                  />
        </GridView>
    </Grid>
</Page>

